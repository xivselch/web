---
import { FaBrandsDiscord, FaBrandsGithub } from "solid-icons/fa";
import Logo from "~/assets/Logo.svg";
---

<footer class="bg-black/1 dark:bg-white/1 border-t">
  <div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
    <div class="sm:flex sm:items-center sm:justify-between">
      <a href="/" class="flex items-center mb-4 sm:mb-0 space-x-2 rtl:space-x-reverse">
        <Logo class="text-red-600 h-12 w-12" />
        <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">
          Emet-Selch<span class="text-red-600">.</span>
        </span>
      </a>
      <ul
        class="flex flex-wrap items-center mb-6 text-sm font-medium text-zinc-700 dark:text-zinc-200 sm:mb-0"
      >
        <li>
          <a href="/about" class="hover:underline me-4 md:me-6"> About </a>
        </li>
        <li>
          <a href="/legal/privacy-policy" class="hover:underline me-4 md:me-6"> Privacy Policy </a>
        </li>
        <li>
          <a href="/legal/terms-of-service" class="hover:underline me-4 md:me-6">
            Terms of Service
          </a>
        </li>
      </ul>
    </div>

    <hr class="my-6 border-zinc-200 dark:border-zinc-800 lg:my-8" />

    <div class="flex justify-start gap-4 mb-6">
      <a
        href="/chat"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Discord"
        class="text-zinc-500 dark:text-zinc-400 hover:text-black dark:hover:text-white transition-colors"
      >
        <FaBrandsDiscord class="w-5 h-5" />
      </a>
      <a
        href="/github"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="GitHub"
        class="text-zinc-500 dark:text-zinc-400 hover:text-black dark:hover:text-white transition-colors"
      >
        <FaBrandsGithub class="w-5 h-5" />
      </a>
    </div>

    <div
      class="flex flex-col md:flex-row md:justify-between text-sm text-zinc-500 dark:text-zinc-400 space-y-4 md:space-y-0"
    >
      <div>
        <p>&copy; {new Date().getFullYear()} Emet-Selch. All rights reserved.</p>
      </div>
      <div class="md:text-right max-w-xl">
        <p>FINAL FANTASY XIV &copy; SQUARE ENIX CO., LTD. All Rights Reserved.</p>
        <p>
          This website is not affiliated with or endorsed by Square Enix Holdings Co., Ltd. or its
          subsidiaries. FINAL FANTASY is a registered trademark of Square Enix Holdings Co., Ltd.
        </p>
      </div>
    </div>
  </div>
</footer>
